<div style="display: flex; flex-wrap: wrap">
  <% products.forEach((product, index) => { %>
  <div style="width: 50%; display: flex">
    <div class="col-3 m1" style="width: 50%">
      <p class="f1"><%= product.category %></p>
      <a style="text-decoration: none" href="product/<%=product.id%>"
        ><h5 class="f2" style="font-weight: 600"><%=product.name%></h5></a
      >
      <div class="buying ff1">
        <b class="f3">$<%= product.price %></b>
        <div class="f6">
          <form
            action="/user/cart/add/<%= product.id %>?_method=POST"
            method="POST"
          >
            <button
              type="submit"
              class="add-cart-btn"
              style="
                display: flex;
                align-items: center;
                justify-content: center;
              "
            >
              <i class="fa-solid fa-cart-shopping add-cart-icon"></i>
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-3 g" style="width: 30%">
      <img
        class="m"
        style="width: 100%; height: 80%"
        src="img/<%= product.category %>.png"
        alt=""
      />
    </div>
  </div>
  <% }) %>
</div>
