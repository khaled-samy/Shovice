  <body>
    <header>
      <div class="header-container" style="display: flex; padding: 0 150px">
        <div class="header-img">
          <a href="/"
            ><img src="/favicon.ico" alt="" width="150px" height="80px"
          /></a>
        </div>
        <div class="header-search">
          <form action="">
            <input
              class="search-bar"
              type="text"
              placeholder="Search for products.."
              name="search"
            />
            <button class="search-btn" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </form>
        </div>
        <% if(user) { %>
        <div class="header-items" style="display: flex">
          <a href="/user/cart" class="cart-btn"
            ><i class="fa-solid fa-cart-shopping"></i>
          </a>
          <a class="nav-link b" href="/">Home</a>
          <a class="nav-link b" href="/api/auth/logout">Logout</a>
        </div>

        <p style="margin: 15px 0 0 20px; color: red">
          Welcome <br /><strong style="color: black"
            ><%= user.username %></strong
          >
        </p>
        <% } else { %>
        <div class="header-items" style="display: flex">
          <a href="/user/cart" class="cart-btn"
            ><i class="fa-solid fa-cart-shopping"></i>
          </a>
          <a class="nav-link b" href="/">Home</a>
          <a class="nav-link b" href="/api/auth/login">Log in</a>
          <% } %>
        </div>
      </div>
    </header>

    <section>
      <div
        class="w3-container w3-padding welcome-container"
        style="background-color: #4e989a"
        id="myHeader"
      >
        <div class="w3-center" style="padding: 20px">
          <h1 class="w3-xxxlarge w3-animate-bottom" style="color: white">
            Welcome to Shovice
          </h1>
          <h4 style="padding-top: 15px; color: white">
            Ecommerce website that allows users to buy Electronic products
            online
          </h4>
          <div class="w3-padding-32">
            <% if(user && user.isAdmin) { %>
            <a href="/api/admin/product">
              <button
                type="button"
                class="btn btn-outline-light"
                style="padding: 10px 40px"
              >
                Add product +
              </button>
            </a>
            <% } else if (user && !user.isAdmin) { %>
            <a href="/user/cart">
              <button
                type="button"
                class="btn btn-outline-light"
                style="padding: 10px 40px"
              >
                Go to cart
              </button>
            </a>
            <% } else { %>
            <a href="/user/cart">
              <button
                type="button"
                onclick="alert('Login with our website to can buy!')"
                class="btn btn-outline-light"
                style="padding: 10px 40px"
              >
                Go to cart
              </button>
            </a>

            <% } %>
          </div>
        </div>
      </div>

      <div class="product-container">
        <div class="product-img-box">
          <img src="/img/<%= product.category %>.png"/>
        </div>

        <div class="product-details-box">
          <div class="product-rating" style="display: flex; padding-top: 50px; margin-bottom: -30px;">
            <i class="fa-solid fa-star rate-btn"></i>
            <i class="fa-solid fa-star rate-btn"></i>
            <i class="fa-solid fa-star rate-btn"></i>
            <i class="fa-solid fa-star rate-btn"></i>
            <i class="fa-solid fa-star rate-btn"></i>
            <p style="padding: 0 10px;">Write a review | Ask a quastion</p>
          </div>
          <h1 style="font-weight: 600;">
            <%= product.name %>
          </h1>
          <h3 style="font-weight: 600;">$ <%= product.price %>.99
          </h3>
          <p style="font-weight: 600;">
            <%= product.desc %>
          </p>
          <p style="font-weight: 600; color: red;">
            <%= product.brand %>
          </p>
          <hr>
          <div>
            <p style="font-weight: 600; color: darkgray;">Size</p>
            <div style="display: flex;">
  
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="small" name="small" value="small">
                <label for="small">Small</label>
              </div>
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="medium" name="medium" value="medium">
                <label for="medium">Medium</label>
              </div>
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="large" name="large" value="large">
                <label for="large">Large</label>
              </div>
            </div>
          </div>
          <div style="padding-top: 40px;">
            <p style="font-weight: 600; color: darkgray;">Color</p>
            <div style="display: flex;">
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="red" name="red" value="red">
                <div style="width: 15px; height: 15px; margin: 3px 5px; background-color: red;"></div>
                <label for="red">Red</label>
              </div>
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="black" name="black" value="black">
                <div style="width: 15px; height: 15px; margin: 3px 5px; background-color: black;"></div>
                <label for="black">Black</label>
              </div>
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="blue" name="blue" value="blue">
                <div style="width: 15px; height: 15px; margin: 3px 5px; background-color: blue;"></div>
                <label for="blue">Blue</label>
              </div>
              <div class="redio-btn" style="display: flex; padding-right: 20px;">
                <input type="radio" id="green" name="green" value="green">
                <div style="width: 15px; height: 15px; margin: 3px 5px; background-color: green;"></div>
                <label for="green">Green</label>
              </div>
            </div>
          </div>

          <% if(user && user.isAdmin) { %>
              <p style="font-weight: 600; color: darkgray; padding-top: 20px;">Availability: <span style="color: black;"><%= product.availability %></span></p>
          <div
            style="
              display: flex;
              justify-content: space-around;
              align-items: center;
              margin-top: 30px;
            "
          >
            <a
              href="/api/admin/product/<%= product.id %>"
              class="btn div-btn2"
              style="width: 40%"
            >
              Edit
            </a>

            <button
              class="btn div-btn2"
              style="background-color: red; width: 40%"
              data-target="/api/admin/product/<%= product.id %>"
              data-method="DELETE"
              data-disabled="true"
            >
              Delete
            </button>
          </div>
          <% } else { %>
            <% if(product.availability) { %>
              <form
              action="/user/cart/add/<%= product.id %>?_method=POST"
              method="POST"
            >
              <button type="submit" class="btn div-btn2" style="margin-top: 40px; margin-left: 70px;">
                <i class="fa-sharp fa-solid fa-cart-plus"></i>
                Add to cart
              </button>
            </form>
              <% } else { %>
                <p style="
                font-weight: 600;
                color: #ff0000; 
                font-size: 20px;
                padding-top: 40px;
                ">Not Available</p>
                <% } %>

          <% } %>
        </div>
        </div>

        <div class="products-container">
          <div style="display: flex;">
            <hr width="5%">
            <span style="padding: 10px 40px 0 40px; font-weight: 600;">Other Products</span>
            <hr style="width: 75%;">
          </div>

          <div class="products-row">
            <% products.forEach(product=> { %>
              <div class="other-products-box">
                <div>
                  <img width="240px" height="260px" src="/img/<%= product.category %>.png"/>
                </div>
                <div style="padding-top: 10px;">
                  <p style="color: darkgrey;">Brand: <span style="color: red; font-weight: 600; margin-top: 10px;"><%= product.brand %></span></p>
                  <div style="margin-bottom: 20px">
                    <a href="/product/<%= product.id %>" style="text-decoration: none; font-size: 25px; font-weight: 600;"><%= product.name %></a>
                  </div>
                  <h5 style="color: darkgrey;">Category: <span style="color: rgb(0, 0, 0); font-weight: 600;"><%= product.category %></span></h5>
                  <h5 style="color: darkgrey;">Price: <span style="color: rgb(0, 0, 0); font-weight: 600;">$<%= product.price %></span></h5>
                </div>
              </div>
              <% }) %>
          </div>
        </div>
      </div>
    </section>

