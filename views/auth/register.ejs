<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/lib/bootstrap-5.1.3-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/lib/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
    <title>Login</title>
  </head>
  <body>
    <header>
      <div class="header-middle">
        <div class="container">
          <div class="row">
            <div class="nav">
              <a href="/"
                ><img src="/img/1.png" alt="" width="137px" height="69px"
              /></a>
              <form class="d-flex" role="search">
                <input
                  class="form-control me-2 sear"
                  type="search"
                  placeholder="Search for products"
                  aria-label="Search"
                />
                <a href="/"
                  ><img
                    class="sear1"
                    src="/img/2.png"
                    alt=""
                    width="22px"
                    height="22px"
                /></a>
              </form>
              <div class="a">
                <a href="/"><img class="a1" src="/img/3.png" alt="" /></a>
              </div>
              <a class="nav-link b" href="/">Home</a>
              <a class="nav-link b" href="/">login</a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="container login-div">
      <div class="row justify-content-center">
        <div class="col-md-6" style="text-align: start">
          <h1 class="div-h1">Register</h1>
          <form action="/api/auth/register" method="POST">
            <div class="form-group">
              <label for="username">Username</label>
              <input
                type="text"
                class="form-control background"
                id="username"
                name="username"
                required
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                class="form-control background"
                id="email"
                name="email"
                required
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control background"
                id="password"
                name="password"
                required
              />
            </div>
            <button type="submit" class="login-btn">Sign up</button>
          </form>
          <p style="text-align: center; margin: 20px 0">
            You already have account? <a href="/api/auth/login">Log in</a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
